{
  "project_name": "nft-api",
  "environment": "qa",
  "services": {
    "nft-api-nft-api": {
      "name": "nft-api",
      "cluster": "nft-api-qa-cluster",
      "thresholds": {
        "cpu_percent": 85,
        "memory_percent": 90,
        "memory_available": 1024,
        "network_errors": 20
      },
      "alert_settings": {
        "priority": "3",
        "include_tags": true
      },
      "tags": {
        "application": "nft-api",
        "service": "nft-api"
      }
    },
    "nft-api-nft-api-workers": {
      "name": "nft-api-workers",
      "cluster": "nft-api-qa-cluster",
      "thresholds": {
        "cpu_percent": 85,
        "memory_percent": 90,
        "memory_available": 1024,
        "network_errors": 20
      },
      "alert_settings": {
        "priority": "3",
        "include_tags": true
      },
      "tags": {
        "application": "nft-api",
        "service": "nft-api-workers"
      }
    }
  },
  "alb": {},
  "databases": {},
  "queues": {},
  "topics": {},
  "java_services": {
    "nft-api-jvm": {
      "name": "nft-api",
      "service_name": "nft-api",
      "thresholds": {
        "jvm_memory_used": 2048,
        "minor_gc_time": 200,
        "major_gc_time": 150
      },
      "alert_settings": {
        "priority": "4",
        "include_tags": true
      },
      "tags": {
        "application": "nft-api",
        "type": "java"
      }
    },
    "nft-api-workers-jvm": {
      "name": "nft-api-workers",
      "service_name": "nft-api-workers",
      "thresholds": {
        "jvm_memory_used": 2048,
        "minor_gc_time": 200,
        "major_gc_time": 150
      },
      "alert_settings": {
        "priority": "4",
        "include_tags": true
      },
      "tags": {
        "application": "nft-api",
        "type": "java"
      }
    }
  },
  "node_services": {},
  "apm_services": {
    "nft-api-apm": {
      "name": "nft-api",
      "service_name": "nft-api",
      "thresholds": {
        "latency": 150,
        "error_rate": 10,
        "throughput": 90
      },
      "alert_settings": {
        "priority": "4",
        "include_tags": true
      },
      "tags": {
        "application": "nft-api",
        "type": "apm"
      }
    }
  },
  "logs": {
    "nft-api-error-rate": {
      "name": "Error Rate Monitor for nft-api",
      "query": "logs(\"service:nft-api env:qa status:error\").index(\"qa\").rollup(\"count\").by(\"service\").last(\"5m\") > 50",
      "alert_settings": {
        "priority": "2",
        "include_tags": true
      },
      "thresholds": {
        "critical": 50,
        "critical_recovery": 40,
        "warning": 35,
        "warning_recovery": 30
      }
    },
    "nft-api-stack-trace": {
      "name": "Stack Trace Monitor for nft-api",
      "query": "logs(\"service:nft-api env:qa @stack_trace:*\").index(\"qa\").rollup(\"count\").by(\"service\").last(\"5m\") > 25",
      "alert_settings": {
        "priority": "1",
        "include_tags": true
      },
      "thresholds": {
        "critical": 25,
        "critical_recovery": 10,
        "warning": 15,
        "warning_recovery": 5
      }
    },
    "nft-api-Error getting balance for wallet": {
      "name": "Custom Log Monitor for 'Error getting balance for wallet'",
      "query": "logs(\"service:nft-api env:qa Error getting balance for wallet\").index(\"qa\").rollup(\"count\").by(\"service\").last(\"5m\") > 50",
      "alert_settings": {
        "priority": "3",
        "include_tags": true
      },
      "thresholds": {
        "critical": 50,
        "critical_recovery": 40,
        "warning": 35,
        "warning_recovery": 30
      }
    },
    "nft-api-workers-error-rate": {
      "name": "Error Rate Monitor for nft-api-workers",
      "query": "logs(\"service:nft-api-workers env:qa status:error\").index(\"qa\").rollup(\"count\").by(\"service\").last(\"5m\") > 50",
      "alert_settings": {
        "priority": "2",
        "include_tags": true
      },
      "thresholds": {
        "critical": 50,
        "critical_recovery": 40,
        "warning": 35,
        "warning_recovery": 30
      }
    },
    "nft-api-workers-stack-trace": {
      "name": "Stack Trace Monitor for nft-api-workers",
      "query": "logs(\"service:nft-api-workers env:qa @stack_trace:*\").index(\"qa\").rollup(\"count\").by(\"service\").last(\"5m\") > 25",
      "alert_settings": {
        "priority": "1",
        "include_tags": true
      },
      "thresholds": {
        "critical": 25,
        "critical_recovery": 10,
        "warning": 15,
        "warning_recovery": 5
      }
    },
    "nft-api-workers-io.venly.tokenapi.common.exception.WalletBusinessException: An unexpected error occurred. Please contact support!": {
      "name": "Custom Log Monitor for 'io.venly.tokenapi.common.exception.WalletBusinessException: An unexpected error occurred. Please contact support!'",
      "query": "logs(\"service:nft-api-workers env:qa io.venly.tokenapi.common.exception.WalletBusinessException: An unexpected error occurred. Please contact support!\").index(\"qa\").rollup(\"count\").by(\"service\").last(\"5m\") > 50",
      "alert_settings": {
        "priority": "3",
        "include_tags": true
      },
      "thresholds": {
        "critical": 50,
        "critical_recovery": 40,
        "warning": 35,
        "warning_recovery": 30
      }
    }
  },
  "notification_channels": {
    "infrastructure": {
      "ecs": "slack-dd-ecs-alerts-p2",
      "alb": "slack-dd-elb-alerts-p2",
      "rds": "slack-dd-rds-alerts-p2"
    },
    "messaging": {
      "sns": "slack-dd-sns-alerts-p2",
      "sqs": "slack-dd-sqs-alerts-p2"
    },
    "application": {
      "java": "slack-dd-apm-alerts-p2",
      "node": "slack-dd-apm-alerts-p2",
      "apm": "slack-dd-apm-alerts-p2"
    },
    "logs": {
      "logs": "slack-dd-logs-alerts-p2"
    },
    "default": "slack-dd-ecs-alerts-p2"
  },
  "tags": {
    "environment": "qa",
    "managed_by": "terraform",
    "project": "nft-api"
  }
}